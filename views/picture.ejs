<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Picture</title>
    <link rel="stylesheet" href="/style/picture.css"> <!-- Подключаем стили -->
</head>
<body>
    <div class="picture-container">
        <h1><%= picture.name %></h1>
        <img src="<%= picture.imageLink %>" alt="<%= picture.name %>">
        <p>Author: <%= picture.author %></p>
        <p>Tags: <%= picture.tags %></p>

        <!-- Форма для добавления комментария -->
        <form action="/picture/<%= picture.id %>/comment" method="POST">
            <textarea name="comment" placeholder="Add a comment"></textarea>
            <button type="submit">Add Comment</button>
        </form>

        <!-- Отображение комментариев -->
        <div class="comments">
            <h2>Comments</h2>
            <% comments.forEach(comment => { %>
                <div class="comment">
                    <p><strong><%= comment.author %></strong> - <%= comment.date %></p>
                    <p><%= comment.text %></p>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
